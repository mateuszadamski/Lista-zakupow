<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/new_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:padding="5dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:onClick="onClickList"
        android:background="#dddddd"
        xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_list_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/name_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cokkkkk"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phone_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 produkt"
                android:textColor="#000000" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end">

            <TextView
                android:id="@+id/create_list_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:text="17.03.2018"
                android:textColor="#000000" />


            <ImageView
                android:id="@+id/settings_list_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:onClick="onClickSettingsIcon"
                android:src="@drawable/ic_more_settings_icon" />

        </LinearLayout>

    </LinearLayout>